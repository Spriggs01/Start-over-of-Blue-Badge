@model IEnumerable<HealtyEats.Models.MealListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (TempData.ContainsKey("SaveResult"))
{


    <div class="alert alert-success fade in" role="alert">
        @ViewBag.SaveResult
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MealName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MealDescription)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MealName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MealDescription)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MealName}) |
                @Html.ActionLink("Details", "Details", new {  id=item.MealName }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MealName})
            </td>
        </tr>
    }

</table>
